@model MVCASPCore.Models.Relative

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<h1>@ViewData["aId"]</h1>

<h4>Relative</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FName" class="control-label">First Name</label>
                <input asp-for="FName" class="form-control" required/>
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LName" class="control-label">Last Name</label>
                <input asp-for="LName" class="form-control" required/>
                <span asp-validation-for="LName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Relation" class="control-label"></label>
                <select asp-for="Relation" class="form-control" />
                    <option value="1" selected="selected"> Son </option>
                    <option value="2"> Daughter </option>
                    <option value="3"> Spouse </option>
                    <option value="4"> Parent </option>
                    <option value="5"> Aunt </option>
                    <option value="6"> Uncle </option>
                    <option value="7"> Grandma </option>
                    <option value="8"> Grandpa </option>
                    <option value="9"> Brother </option>
                    <option value="10"> Sister </option>
                <span asp-validation-for="Relation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UId" class="control-label" style="display: none"></label>
                <input asp-for="UId" class="form-control" value="@ViewData["aId"]" style="display: none" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <li><a asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@ViewData["aId"]">Back</a></li>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
